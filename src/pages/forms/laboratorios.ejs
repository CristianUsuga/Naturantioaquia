<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Usuario- Naturantioquia</title>
    <script src="/js/Laboratorios.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <%- include('../partials/navigationAdmin') %>
    <div class="card m-3">
      <div class="card-header text-center">
        Laboratorios
      </div>
      <div class="card-body">
        <form id="form_labs" onsubmit="return validateForm()">

          <div class="row">
            <div class="form-group col-md-6">
              <label for="nit">NIT:</label>   
              <input type="text" class="form-control" id="nit">
            </div>
            <div class="form-group col-md-6">
              <label for="nombre_laboratorio">Nombre:</label>   
              <input type="text" class="form-control" id="nombre_laboratorio" oninput="validateNombre('nombre_laboratorio')" required>
              <span id="nombre_laboratorioError" class="error-message"></span>
            </div>
          </div>
        
          <div class="row">
            <div class="form-group col-md-6">
              <label for="correo">Correo:</label>
              <input type="email" class="form-control" id="correo" oninput="validateCorreo()" required> 
              <span id="correoError" class="error-message"></span>
            </div>
            <div class="col-md-6 form-group">
              <label for="telefono">Tel√©fono:</label>
              <input type="text" class="form-control" id="telefono" oninput="validateTelefono()" required>
              <span id="telefonoError" class="error-message"></span>
            </div>
          </div>
        
          <div class="row">
            <div class="col-md-6 form-group">
              <label for="celular">Celular:</label> 
              <input type="text" class="form-control" id="celular" oninput="validateCelular()">
              <span id="celularError" class="error-message"></span>
            </div>
            <div class="form-group col-md-4">
              <label for="estado">Estado:</label>
              <select id="estado" class="form-control">
                <option value="">Seleccionar</option>
                <option value="1">Activo</option>
                <option value="2">Inactivo</option>
              </select>
            </div>
          </div>
        
          <input type="submit" name="registro" value="Enviar" class="submit-button btn btn-success m-3"/>
          <button type="button" id="verLabs" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Ver laboratorios
          </button>
        </form>
      </div>
    </div>
    
    <%- include('../partials/footer') %>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Laboratorios</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">NIT</th>
              <th scope="col">Nombre</th>
            </tr>
          </thead>
          <tbody id="tablaLaboratorios">
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeModal">Close</button>
      </div>
    </div>
  </div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>